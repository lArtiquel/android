<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <TextView
            android:layout_width="176dp"
            android:layout_height="105dp" android:id="@+id/personalInfoTextView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="4dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/pathTextView"
            android:textSize="14sp" android:lineSpacingExtra="8sp"/>
    <TextView
            android:layout_width="170dp"
            android:layout_height="118dp" android:id="@+id/pathTextView"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/setPathButton" android:layout_marginBottom="8dp"
            android:textSize="18sp" android:lineSpacingExtra="10sp"/>
    <Button
            android:text="Set path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/setPathButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/callTaxiButton" android:layout_marginBottom="132dp"
            app:layout_constraintHorizontal_bias="0.503"/>
    <Button
            android:text="Call Fake Taxi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/callTaxiButton"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="136dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>