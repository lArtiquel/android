<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.univer.andruxa.l1.MainActivity" android:padding="10dp">
    <Button
            android:text="Шпуньк"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/submitPersonalInfo"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.538"
            android:layout_marginBottom="88dp" app:layout_constraintTop_toBottomOf="@+id/linearLayout"/>
    <TextView
            android:text="Welcome to Fake Taxi app!"
            android:layout_width="320dp"
            android:layout_height="58dp" android:id="@+id/welcomeText"
            android:editable="false" android:textColor="#5C00FF"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.571"
            android:textSize="24sp" android:textAlignment="center"/>
    <ImageView
            android:layout_width="119dp"
            android:layout_height="99dp"
            android:id="@+id/profileImageView"
            app:layout_constraintTop_toBottomOf="@+id/welcomeText"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.489" app:srcCompat="@drawable/bald_guy"/>
    <TextView
            android:text="Let's do it!"
            android:layout_width="113dp"
            android:layout_height="41dp" android:id="@+id/motivationTextView"
            app:layout_constraintTop_toBottomOf="@+id/profileImageView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:textSize="18sp" android:textColor="#FF0808"
            android:textAlignment="center" android:layout_marginTop="8dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="271dp"
            android:layout_height="244dp"
            android:layout_marginTop="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"
            android:gravity="center|fill_horizontal" android:id="@+id/linearLayout">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/nameEdit"
                android:hint="Ваше имя, сударь"
                android:padding="10dp" android:textColor="#673AB7"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="16dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/surnameEdit"
                android:hint="Gimme that surname, boi. Now!"
                android:textColorHighlight="#009688" android:textColor="#3F51B5"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:inputType="textPersonName|phone"
                android:ems="10"
                android:id="@+id/phoneEdit"
                android:hint="Э, слыш, давай мобилу!" android:phoneNumber="true" android:textColor="#4CAF50"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>